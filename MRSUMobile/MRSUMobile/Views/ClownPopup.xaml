<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="MRSUMobile.Views.ClownPopup"
	xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
	Size="300,250">

	<StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource Background_Dark}, Light={StaticResource Background_Light}}">
		<xct:MediaElement Source="ms-appx:///pepe.mp4"
			AutoPlay="True"
			ShowsPlaybackControls="False"
			HeightRequest="200"
			Aspect="AspectFill"
			WidthRequest="300"
			HorizontalOptions="CenterAndExpand"/>

		<Label Text="Обратись в 209 аудиторию!"
			FontSize="Large"
			VerticalOptions="CenterAndExpand"
			HorizontalOptions="CenterAndExpand"
			HeightRequest="30"/>
	</StackLayout>
</xct:Popup>