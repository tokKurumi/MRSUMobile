<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="MRSUMobile.Views.ProfilePage"
	xmlns:viewmodels="clr-namespace:MRSUMobile.ViewModels"
	BackgroundColor="{AppThemeBinding Dark={StaticResource Background_Dark}, Light={StaticResource Background_Light}}">

	<ContentPage.BindingContext>
		<viewmodels:ProfileViewModel/>
	</ContentPage.BindingContext>

	<ContentPage.Content>
		<StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource Foreground_Dark}, Light={StaticResource Foreground_Light}}">

			<Grid RowDefinitions="Auto, Auto, Auto, *" VerticalOptions="FillAndExpand">
				<Frame Grid.Row="0" HeightRequest="225" BackgroundColor="{AppThemeBinding Dark={StaticResource Background_Dark}, Light={StaticResource Background_Light}}"/>
				<Frame Grid.Row="1"
					HeightRequest="200"
					WidthRequest="200"
					Margin="10, -300, 10, 10"
					CornerRadius="200"
					BorderColor="{AppThemeBinding Dark={StaticResource Primary_Dark}, Light={StaticResource Primary_Light}}"
					HorizontalOptions="Center"
					VerticalOptions="Center"
					IsClippedToBounds="True"
					Padding="0">

					<Frame.Content>
						<Image Source="{Binding ProfileImagePath}" Aspect="AspectFit"/>
					</Frame.Content>
				</Frame>
				<Frame Grid.Row="2"
					HeightRequest="60"
					WidthRequest="90"
					BackgroundColor="{AppThemeBinding Dark={StaticResource SubBackground_Dark}, Light={StaticResource SubBackground_Light}}"
					Margin="10, -50, 10, 0"
					CornerRadius="10"
					Padding="5">

					<Frame.Content>
						<Grid RowDefinitions="*, *">
							<Label Grid.Row="0" Text="{Binding ProfileUserName}" HorizontalOptions="CenterAndExpand" FontSize="Large"/>
							<Label Grid.Row="1" Text="{Binding ProfileUserLogin}" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark={StaticResource Text_Dark}, Light={StaticResource Text_Light}}"/>
						</Grid>
					</Frame.Content>
				</Frame>
				<Frame Grid.Row="3"
					HeightRequest="40"
					WidthRequest="90"
					BackgroundColor="{AppThemeBinding Dark={StaticResource SubBackground_Dark}, Light={StaticResource SubBackground_Light}}"
					Margin="10"
					Padding="0"
					CornerRadius="10">

					<Frame.Content>
						<ScrollView Padding="10">
							<Label Text="Something from papi.mrsu.ru" HeightRequest="1000" HorizontalOptions="CenterAndExpand"/>
						</ScrollView>
					</Frame.Content>
				</Frame>
			</Grid>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>